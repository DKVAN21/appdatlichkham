<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTen_Thuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên thuốc"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSL_Thuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvTen_Thuoc"
        app:layout_constraintTop_toTopOf="@+id/tvTen_Thuoc" />

    <TextView
        android:id="@+id/tvNgay_Thuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uống trong 5 ngày"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="150dp"
        app:layout_constraintStart_toStartOf="@+id/tvSL_Thuoc"
        app:layout_constraintTop_toTopOf="@+id/tvTen_Thuoc" />

    <Button
        android:id="@+id/btnXoa_Thuoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:layout_marginTop="10dp"
        app:backgroundTint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>