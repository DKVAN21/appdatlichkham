<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatLichActivity"
    android:background="@drawable/src_assets_images_bg">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/primaryTextColor"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chi tiết phiếu khám"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvChuandoan_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Chuẩn đoán:"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/edBenh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:layout_marginTop="80dp"
        android:hint="Bệnh"
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvChuandoan_datLichNd"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tvChidinh_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Chỉ định:"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvChuandoan_datLichNd"
        app:layout_constraintTop_toBottomOf="@+id/tvChuandoan_datLichNd" />

    <EditText
        android:id="@+id/edChidinh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:hint="Chỉ định xét nghiệm, nội soi,..."
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvChidinh_datLichNd"
        app:layout_constraintTop_toBottomOf="@+id/edBenh" />

    <TextView
        android:id="@+id/tvdando_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Dặn dò:"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvChidinh_datLichNd"
        app:layout_constraintTop_toBottomOf="@+id/tvChidinh_datLichNd" />

    <EditText
        android:id="@+id/edDando"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:hint="Dặn dò của bác sĩ"
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edChidinh" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_Lichsukham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:text="Lịch sử khám"
            android:backgroundTint="#FF9E80"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/black"
            app:backgroundTint="#00BCD4"/>

        <Button
            android:id="@+id/btnTaoPhieuKham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:textColor="@color/black"
            android:text="Hoàn thành"
            app:backgroundTint="@color/yellow"/>

        <Button
            android:id="@+id/btnHuyPhieuKham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="24dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="Thoát"
            app:backgroundTint="@color/yellow"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnKhamsau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="120dp"
        android:layout_weight="1"
        android:text="Khám sau"
        android:textColor="@color/black"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnVideocall_Bs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:layout_marginStart="50dp"
        android:layout_weight="1"
        android:text="Gọi video"
        android:textColor="@color/black"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnKhamsau"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcToathuoc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKhamsau"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvdTenthuoc_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Tên thuốc:"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKhamsau" />

    <EditText
        android:id="@+id/edTenthuoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Tên thuốc"
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvdTenthuoc_datLichNd"
        app:layout_constraintTop_toBottomOf="@+id/btnKhamsau" />

    <TextView
        android:id="@+id/tvdSoluong_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Số lượng:"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdTenthuoc_datLichNd" />

    <EditText
        android:id="@+id/edSoluong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="220dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="SL(viên,gói)"
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvdSoluong_datLichNd"
        app:layout_constraintTop_toBottomOf="@+id/edTenthuoc" />

    <EditText
        android:id="@+id/edSongay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:hint="Số ngày"
        android:textSize="16dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edSoluong"
        app:layout_constraintTop_toBottomOf="@+id/edTenthuoc" />

    <Button
        android:id="@+id/btnThemTh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:text="Thêm"
        app:backgroundTint="#ADFF3B"
        app:layout_constraintTop_toTopOf="@+id/edSoluong"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_user"
        app:layout_constraintTop_toTopOf="@+id/rcToathuoc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvTenBn_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="40dp"
        android:text="Bệnh nhân: "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"/>

    <TextView
        android:id="@+id/tvMota_datLichNd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="50dp"
        android:text="Mô tả:"
        app:layout_constraintEnd_toEndOf="@+id/tvTenBn_datLichNd"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"/>


</androidx.constraintlayout.widget.ConstraintLayout>